<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    x:Class="GorodTV.Pages.EpgsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:GorodTV.ModelViews"
    Shell.BackgroundColor="#0D22B0">


    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsEnabled="False" IsVisible="False" />
    </Shell.BackButtonBehavior>

    <Shell.TitleView>
        <Label
            FontAttributes="Bold"
            FontFamily="RussoOneRegular"
            FontSize="20"
            HorizontalOptions="Center"
            Text="{Binding ChannelName}"
            TextColor="White"
            VerticalOptions="Center" />
    </Shell.TitleView>

    <ContentPage.BindingContext>
        <vm:EpgsViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <Grid Padding="10" RowDefinitions="Auto, *">
            <Button
                BackgroundColor="Red"
                Command="{Binding StartLiveBroadcastCommand}"
                CornerRadius="20"
                FontFamily="RussoOneRegular"
                FontSize="16"
                HeightRequest="75"
                HorizontalOptions="Center"
                Text="Смотреть прямую трансляцию"
                TextColor="#FFFFFF"
                VerticalOptions="Center"
                WidthRequest="300" />
            <CollectionView
                Grid.Row="1"
                Margin="10"
                BackgroundColor="Transparent"
                ItemsSource="{Binding Epgs}"
                SelectedItem="{Binding SelectedEpg, Mode=TwoWay}"
                SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="5"
                            Padding="2"
                            BackgroundColor="#091775"
                            Stroke="#FFFFFF"
                            StrokeShape="RoundRectangle 20,20,20,20"
                            StrokeThickness="3"
                            WidthRequest="350">
                            <VerticalStackLayout Spacing="5">
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="18"
                                    HorizontalTextAlignment="Center"
                                    Text="{Binding Caption}"
                                    TextColor="White"
                                    VerticalTextAlignment="Center" />
                                <Label
                                    FontSize="16"
                                    HorizontalTextAlignment="Center"
                                    Text="{Binding Start_Time}"
                                    TextColor="#AAAAAA"
                                    VerticalTextAlignment="Center" />
                                <Label
                                    FontSize="16"
                                    HorizontalTextAlignment="Center"
                                    Text="{Binding Description}"
                                    TextColor="#AAAAAA"
                                    VerticalTextAlignment="Center" />
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </ContentPage.Content>
</ContentPage>